  <body>
    <!-- header Section -->
    <header class="header">
      <a href="#" class="logo"><span>C</span>onfoEase</a>

      <!-- nav bar -->
      <nav class="navbar">
        <a href="/">Home</a>
        <a href="/committee">Committees</a>
        <a href="/">Speakers</a>
        <a href="/">Contact Us</a>
        <a href="/login1">Login</a>

        <div id="menu-bar" class="fas fa-bars"></div>
      </nav>
      <!-- Nav Bar ended -->
    </header>
    <!-- header Section -->

    <!-- Section for displaying the heading -->
    <section class="home" id="home">
      <div class="content">
        <h3>Reviewer <span>Console</span></h3>
      </div>
    </section>
    <!-- Section for heading closed -->

    <div class="filter-container">
      <!-- Filter buttons -->
      <select
        id="filterDropdown"
        class="filter-dropdown"
        onchange="filterPapers(this.value)"
      >
        <option value="all">All Papers</option>
        <option value="unchecked">Unchecked Papers</option>
        <option value="checked">Checked Papers</option>
      </select>
      <!-- <button class="filter-btn" onclick="filterPapers('unchecked')">Unchecked</button>
        <button class="filter-btn" onclick="filterPapers('checked')">Checked </button>
        <button class="filter-btn active" onclick="filterPapers('all')">All </button> -->
    </div>

    <!-- Table for papers -->
    <div id="table-container">
      <table>
        <thead>
          <tr style="height: 80px">
            <th style="width: 7%">Paper ID</th>
            <th style="width: 30%">Title</th>
            <th style="width: 20%">Subject Areas</th>
            <th style="width: 13%">Status</th>
            <th style="width: 40%">Review</th>
          </tr>
        </thead>
        <tbody>
          <tr data-status="checked">
            <td>1</td>
            <td>Emerging Technology</td>
            <td>Data Mining</td>
            <td>Checked</td>
            <td>Reviews</td>
          </tr>
          <tr data-status="unchecked">
            <td>2</td>
            <td>Data Mining in Education</td>
            <td>Data Mining</td>
            <td>Unchecked</td>
            <td>Reviews</td>
          </tr>
          <tr data-status="checked">
            <td>3</td>
            <td>Data analysis with the SolarSoft system</td>
            <td>Data Analysis</td>
            <td>Checked</td>
            <td>Reviews</td>
          </tr>
          <tr data-status="unchecked">
            <td>4</td>
            <td>Trends in big data analytics</td>
            <td>Data Analysis</td>
            <td>Unchecked</td>
            <td>Reviews</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- Footer Section -->
    <section class="footer" id="footer">
      <div class="box-conatainer">
        <div class="box">
          <h3>Head Quarters</h3>
          <a href="#"
