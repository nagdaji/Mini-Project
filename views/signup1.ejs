<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ConfoEase</title>
    <link rel="stylesheet" href="/css/singup.css" />
    <!-- swiper css -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <!-- swipper css link -->

    <!-- font awesome link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <!-- font awesome link -->
  </head>
  <body>
    <!-- header Section -->
    <header class="header">
      <a href="#" class="logo"><span>C</span>onfoEase</a>

      <!-- nav bar -->
      <nav class="navbar">
        <a href="/home">Home</a>
        <a href="/committee">Committees</a>
        <a href="/home">Speakers</a>
        <a href="/home">Contact Us</a>
        <a href="/login1">Login</a>

        <div id="menu-bar" class="fas fa-bars"></div>
      </nav>
      <!-- Nab Bar ended -->
    </header>
    <!-- header Section -->

    <!-- login form  -->
    <secton class="container forms">
      <div class="form login">
        <div class="form-content">
          <header>SignUp</header>
          <form action="#">
            <div class="field input-field">
              <input type="text" class="input" placeholder="name" />
            </div>
            <div class="field input-field">
              <input type="email" class="input" placeholder="email" />
            </div>
            <div class="field input-field">
              <input type="password" class="password" placeholder="password" />
              <i
                class="fa-solid fa-eye-slash eye-icon"
                style="color: #3687d6"
              ></i>
            </div>
            <div class="field input-field">
              <input
                type="password"
                class="password"
                placeholder="confirm password"
              />
              <i
                class="fa-solid fa-eye-slash eye-icon"
                style="color: #3687d6"
              ></i>
            </div>
            <div class="field input-field">
              <select name="Choose Role" id="role">
                <option value="1" class="choose">Enter As</option>
                <option value="author">Author</option>
                <option value="attendee">Attendee</option>
              </select>
            </div>
            <!-- <div class="form-link">
              <a href="#" class="forgot-password">Forgot Password?</a>
            </div> -->
            <div class="field button-field">
              <button>Register</button>
            </div>
          </form>
          <div class="form-link">
            <span
              >Already have an account
              <a href="/login1" class="signup-link">Login</a></span
            >
          </div>
        </div>
      </div>
    </secton>
    <!-- login form  -->
  </body>
</html>
