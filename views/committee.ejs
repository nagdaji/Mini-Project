<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ConfoEase</title>
    <link rel="stylesheet" href="/css/committee.css" />
    <!-- swiper css -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <!-- swipper css link -->

    <!-- font awesome link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <!-- font awesome link -->
  </head>
  <body>
    <!-- header Section -->
    <header class="header">
      <a href="#" class="logo"><span><%=data.eventname%></span></a>

      <!-- nav bar -->
      <nav class="navbar">
        <a href="/conference/<%= data.eventname %>">Home</a>
        <a href="#organization">Organization Committees</a>
        <a href="#advisory">Advisory Committees</a>
        <a href="#tracks">Track Chairs</a>
        <a href="#technical">Technical Committees</a>
        <a href="/signup1/<%= data.eventname %>">Register</a>
        <a href="/login1/<%= data.eventname %>">Login</a>

        <div id="menu-bar" class="fas fa-bars"></div>
      </nav>
      <!-- Nab Bar ended -->
    </header>
    <!-- header Section -->

    <!-- Section for displaying the heading -->
    <section class="home" id="home">
      <div class="content">
        <h3>Committee <span>Details</span></h3>
      </div>
    </section>
    <!-- Section for heading closed -->

    <!-- committees -->
    <div class="container">
      <!-- Organization Committee -->
      <div class="content" id="organization">
        <h3>Organization <span>Committees</span></h3>
      </div>
      <% var k = 0 %>
      <% for(var i=0;i<data.committeename.length;i++) { %> 
        <div class="committees">
          <h4><%= data.committeename[i] %></h4>
          <div class="committee">

            <% for(var j=k;j<data.numberofmembers[i]+k;j++) { %> 
  
              <div class="person">
                <img src="<%= data.memberimages[j]%>" />
                <h4><span><%= data.membername[j]%></span></h4>
              </div>
    
            <%}%>
            <br>
            <% k += data.numberofmembers[i]%>
          </div>
        </div>
      <%}%>
      <!-- organization Committees -->

      <!-- Advisory Committee -->
      <div class="content" id="advisory">
        <h3>Advisory <span>Committees</span></h3>
      </div>
      <% var k = 0 %>
      <% for(var i=0;i<data.advcommname.length;i++) { %> 
        <div class="committees">
          <h4><%= data.advcommname[i] %></h4>
          <div class="committee">

            <% for(var j=k;j<data.noofadvmembers[i]+k;j++) { %> 
  
              <div class="person">
                <img src="<%= data.advmemberimages[j]%>" />
                <h4><span><%= data.advmembername[j]%></span></h4>
              </div>
    
            <%}%>
            <br>
            <% k += data.noofadvmembers[i]%>
          </div>
        </div>
      <%}%>
      <!-- Advisory Committees -->

      <!-- Track Chair -->
      <div class="content" id="tracks">
        <h3>Track <span>Chairs</span></h3>
      </div>
      <% var k = 0 %>
      <% for(var i=0;i<data.tracksname.length;i++) { %> 
        <div class="committees">
          <h4><%= data.tracksname[i] %></h4>
          <div class="committee">

            <% for(var j=k;j<data.nooftracks[i]+k;j++) { %> 
  
              <div class="person">
                <img src="<%= data.tracksmemberimages[j]%>" />
                <h4><span><%= data.tracksmembername[j]%></span></h4>
              </div>
    
            <%}%>
            <br>
            <% k += data.nooftracks[i]%>
          </div>
        </div>
      <%}%>
      <!-- Tracks Chairs -->

      <!-- Technical Program Committee -->
      <div class="content" id="technical">
        <h3>Technical <span>Committees</span></h3>
      </div>
      <% var k = 0 %>
      <% for(var i=0;i<data.techcommname.length;i++) { %> 
        <div class="committees">
          <h4><%= data.techcommname[i] %></h4>
          <div class="committee">

            <% for(var j=k;j<data.nooftechmembers[i]+k;j++) { %> 
  
              <div class="person">
                <img src="<%= data.techmemberimages[j]%>" />
                <h4><span><%= data.techmembername[j]%></span></h4>
              </div>
    
            <%}%>
            <br>
            <% k += data.nooftechmembers[i]%>
          </div>
        </div>
      <%}%>
      <!-- Technical Program Committees -->
    </div>
<!-- committees -->
    <!-- Footer Section -->
    <section class="footer" id="footer">
      <div class="box-conatainer">
        <div class="box">
          <h3>Head Quarters</h3>
          <a href="#"
            ><i class="fas fa-map-marker-alt"></i>Washington DC, USA</a
          >
          <a href="#"><i class="fas fa-map-marker-alt"></i>Dubai, UAE</a>
          <a href="#"><i class="fas fa-map-marker-alt"></i>Delhi, INDIA</a>
          <a href="#"><i class="fas fa-map-marker-alt"></i>Tokiyo, Japan</a>
          <a href="#"><i class="fas fa-map-marker-alt"></i>Beijing, China</a>
        </div>
        <div class="box">
          <h3>Quick links</h3>
          <a href="/conference/<%= data.eventname %>"><i class="fas fa-arrow-right"></i>Home</a>
          <a href="/committee/<%= data.eventname %>"><i class="fas fa-arrow-right"></i>Committees</a>
          <a href="/conference/<%= data.eventname %>"><i class="fas fa-arrow-right"></i>Key Dates</a>
          <a href="/call-for-paper/<%= data.eventname %>"
            ><i class="fas fa-arrow-right"></i>Call for Papers</a
          >
          <a href="/conference/<%= data.eventname %>"><i class="fas fa-arrow-right"></i>Contact Us</a>
          <a href="/login1/<%= data.eventname %>"><i class="fas fa-arrow-right"></i>Login</a>
        </div>
        <div class="box">
          <h3>Contact info</h3>
          <a href="#"><i class="fas fa-phone"></i>+1-1234567890</a>
          <a href="#"><i class="fas fa-phone"></i>+91-1234567890</a>
          <a href="#"
            ><i class="fas fa-envelope"></i>confoease@confo.ease.com</a
          >
          <a href="#"><i class="fas fa-envelope"></i>head@confoease.com</a>
          <a href="#"
            ><i class="fas fa-map-marker-alt"></i>Washington DC, USA, 753698</a
          >
        </div>

        <div class="box">
          <h3>Follow us</h3>
          <a href="#"><i class="fab fa-facebook-f"></i>facebook</a>
          <a href="#"><i class="fab fa-twitter"></i>twitter</a>
          <a href="#"><i class="fab fa-instagram"></i>instagram</a>
          <a href="#"><i class="fab fa-linkedin-in"></i>linkedin</a>
        </div>
      </div>
      <div class="credit">
        Created by <span>Group 23</span>| All Rights Reserved
      </div>
    </section>
    <!-- Footer Section -->
  </body>
</html>
