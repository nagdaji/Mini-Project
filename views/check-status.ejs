<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta
      http-equiv="Cache-Control"
      content="no-cache, no-store, must-revalidate"
    />
    <meta http-equiv="Pragma" content="no-cache" />
    <meta http-equiv="Expires" content="0" />
    <meta http-equiv="Cache-Control" content="no-cache" />

    <link rel="stylesheet" href="/css/check-status.css" />
    <title>Dashboard</title>
    <!-- font awesome link -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <!-- font awesome link -->
  </head>
  <body>
    <!-- side navigation bar -->
    <div class="container">
      <div class="navigation">
        <div class="toggle-bar">
          <a href="#">
            <span class="toggle icon">
              <i class="fa-solid fa-bars" style="color: #fff"></i>
            </span>
            <span class="title"><%=data%> </span>
          </a>
        </div>
        <ul>
          <li></li>
          <li>
            <a href="/paper_submission/<%=data%>">
              <span class="icon"><i class="fa-regular fa-newspaper"></i></span>
              <span class="title">Submit Papers</span>
            </a>
          </li>
          <li class="hovered">
            <a href="/check-status/<%=data%>">
              <span class="icon"
                ><i class="fa-solid fa-check-to-slot"></i
              ></span>
              <span class="title">Check Status</span>
            </a>
          </li>

          <li>
            <a href="/schedule">
              <span class="icon"><i class="fa-regular fa-calendar"></i></span>
              <span class="title">Schedule</span>
            </a>
          </li>
          <li>
            <a href="/logout/<%=data%>">
              <span class="icon"
                ><i class="fa-solid fa-right-from-bracket"></i
              ></span>
              <span class="title">Logout</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- main content -->
      <div class="main">
        <!-- top navigation bar -->
        <div class="top-bar">
          <div class="search">
            <label for="Search">
              <input type="text" placeholder="Search User" />
              <i
                class="fa-solid fa-magnifying-glass"
                style="color: #3867d6"
              ></i>
            </label>
          </div>
          <div class="user">
            <img src="/image/user.jpg" alt="" />
          </div>
        </div>
        <!-- top navigation bar -->

        <!-- div for displaying the paper status -->
        <div id="paper-container">
          <!-- Author Info -->
          <h2 id="author-name">Author Name</h2>

          <!-- Paper Viewer -->
          <div id="pdf-viewer">
            <iframe id="pdf-frame" src="" width="100%" height="500px"></iframe>
          </div>

          <!-- Paper Status -->
          <div id="paper-status">
            <strong>Status:</strong> <span id="status-text">Pending</span>
          </div>

          <!-- Delete Button -->
          <button id="delete-button">Delete Paper</button>
        </div>

        <!-- div for displaying the paper status -->
      </div>
      <!-- main content -->
    </div>
    <!-- side navigation bar -->

    <!-- script file -->
    <script src="/js/check-status.js"></script>
    <!-- script file -->
  </body>
</html>
